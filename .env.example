# Application
XROUTER_ENV=development  # development, test, production
LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR, CRITICAL
PORT=8000              # API server port

# Database
SQLITE_URL=sqlite:///xrouter.db  # SQLite database URL
DB_ECHO=false                    # Enable SQL query logging
DB_TIMEOUT=5                     # Database operation timeout in seconds

# Redis
REDIS_URL=redis://localhost:6379/0  # Redis connection URL
REDIS_PASSWORD=                     # Redis password (optional)
REDIS_SSL=false                     # Enable Redis SSL/TLS
REDIS_PREFIX=xrouter                # Prefix for Redis keys

# API
API_HOST=0.0.0.0                    # API server host
API_WORKERS=1                       # Number of API worker processes
API_CORS_ORIGINS=["*"]              # CORS allowed origins
API_RATE_LIMIT=100                  # Default rate limit per minute
API_KEY_LENGTH=32                   # Length of generated API keys
API_KEY_PREFIX=xr                   # Prefix for API keys

# GigaChat Provider
GIGACHAT_API_URL="https://gigachat.devices.sberbank.ru/api/v1"
GIGACHAT_CREDENTIALS="your_authorization_key_here"
GIGACHAT_SCOPE="GIGACHAT_API_PERS"
GIGACHAT_VERIFY_SSL_CERTS=false

# YandexGPT Provider (Release 1.1)
YANDEX_GPT_API_URL="https://llm.api.cloud.yandex.net/foundationModels/v1/completion"
YANDEX_API_KEY_ID="your_api_key_id_here"
YANDEX_API_KEY="your_api_key_here"
YANDEX_FOLDER_ID="your_folder_id_here"

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Security
API_KEY_SALT=your-salt-here  # Salt for API key hashing

# Rate Limiting
RATE_LIMIT_STORAGE=redis       # redis or memory
RATE_LIMIT_STRATEGY=fixed-window  # fixed-window or sliding-window
RATE_LIMIT_DEFAULT=100        # Default requests per minute
RATE_LIMIT_BURST=200         # Maximum burst size

# Cache
CACHE_TTL=3600                # General cache TTL in seconds
API_KEY_CACHE_TTL=300         # API key cache TTL in seconds
PROVIDER_STATUS_CACHE_TTL=60  # Provider status cache TTL in seconds
CACHE_PREFIX=cache           # Prefix for cache keys

# Timeouts
HTTP_TIMEOUT=30              # HTTP client timeout in seconds
PROVIDER_TIMEOUT=60          # Provider request timeout in seconds
PROVIDER_MAX_RETRIES=3      # Maximum provider request retries

# Development
DEBUG=false                 # Enable debug mode
TESTING=false              # Enable testing mode

# Future Features (Release 1.1)
EMBED_API_URL="http://localhost:8001"  # Embedding service URL
