# Application
XROUTER_ENV=development  # development, test, production
LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR, CRITICAL
PORT=8000

# Database
SQLITE_URL=sqlite:///xrouter.db

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# API
API_HOST=0.0.0.0
API_WORKERS=1
API_CORS_ORIGINS=["*"]
API_RATE_LIMIT=100  # requests per minute

# GigaChat Provider
GIGACHAT_API_URL="https://gigachat.devices.sberbank.ru/api/v1"
GIGACHAT_CREDENTIALS="your_authorization_key_here"
GIGACHAT_SCOPE="GIGACHAT_API_PERS"
GIGACHAT_VERIFY_SSL_CERTS=false

# YandexGPT Provider (Release 1.1)
YANDEX_GPT_API_URL="https://llm.api.cloud.yandex.net/foundationModels/v1/completion"
YANDEX_API_KEY_ID="your_api_key_id_here"
YANDEX_API_KEY="your_api_key_here"
YANDEX_FOLDER_ID="your_folder_id_here"

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Security
API_KEY_SALT=your-salt-here  # For API key hashing

# Rate Limiting
RATE_LIMIT_STORAGE=redis  # redis or memory
RATE_LIMIT_STRATEGY=fixed-window  # fixed-window or sliding-window

# Cache
CACHE_TTL=3600  # seconds
API_KEY_CACHE_TTL=300  # seconds
PROVIDER_STATUS_CACHE_TTL=60  # seconds

# Timeouts
HTTP_TIMEOUT=30  # seconds
PROVIDER_TIMEOUT=60  # seconds
DB_TIMEOUT=5  # seconds

# Development
DEBUG=false
TESTING=false

# Future Features (Release 1.1)
# Embedding service integration
EMBED_API_URL="http://localhost:8001"